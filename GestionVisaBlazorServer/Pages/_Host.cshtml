@page "/"
@namespace GestionVisaBlazorServer.Pages
@using GestionVisaBlazorServer.Components.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>GestionVisaBlazorServer</title>
    <base href="/" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />

    <!-- Style personnalisé principal -->
    <link href="css/app.css" rel="stylesheet" />

    <!-- Nouvelle feuille de style login créatif -->
    <link href="css/login.css" rel="stylesheet" />

    <!-- Icônes Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <!-- Icônes Font Awesome pour email / mot de passe -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- jsPDF pour génération PDF -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.25/jspdf.plugin.autotable.min.js"></script>
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <!-- Blazor script -->
    <script src="_framework/blazor.server.js"></script>

    <!-- Script personnalisé -->
    <script src="js/download.js"></script>
</body>
</html>
